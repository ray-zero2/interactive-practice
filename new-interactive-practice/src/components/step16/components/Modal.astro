<div class="modal js-modal" data-close="true">
  <div class="content">
    <p class="confirmTitle">Sound will be emitted.<br> Please be mindful of the volume.</p>
    <button class="confirmButton js-button" data-type="start">play</button>
  </div>
</div>



<style lang="scss">
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    display: grid;
    place-items: center;
    background-color: rgba(200, 200, 200, 0.2);
    backdrop-filter: blur(5px);
    overflow: hidden;
  }

  .content {
      padding: 20px;
      display: grid;
      place-items: center;
      gap: 16px;
    }
    .confirmTitle {
      color: #eee;
      font-size: 16px;
      font-weight: bold;
      margin: 0;
      text-align: center;
    }
    .confirmButton {
      display: block;
      cursor: pointer;
      text-align: center;
      text-transform: uppercase;
      padding: 4px 24px;
      border-radius: 100vw;
      color: #333;
      background: #e3edf0;
      &:hover {
        background-position: right center;
        background-size: 140% auto;
        animation: hoverAnim .8s infinite;
      }
      @keyframes hoverAnim {
        0% {box-shadow: 0 0 0 0 #27acd9;}
        70% {box-shadow: 0 0 0 6px rgb(39 172 217 / 0%);}
        100% {box-shadow: 0 0 0 0 rgb(39 172 217 / 0%);}
      }
    }
</style>
