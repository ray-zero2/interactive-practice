---
import Css3d from "./Css3d.astro";

---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">
<div class="bg">
  <Css3d>
    <div class="square">
      <div class="square-inner">
        <p class="words js-words">
        </p>
      </div>
    </div>
  </Css3d>
</div>

<style>
  .bg {
    background-color: #000;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: grid;
    place-items: center;
  }

  .square {
    width: 80vmin;
    aspect-ratio: 1;
    background: #00061C;
  }

  .square-inner {
    width: 100%;
    height: 100%;
    padding: 2vmin;
    display: grid;
    place-items: center;
  }

  .words {
    margin: 0;
    padding: 0;
    font-size: 4vmin;
    font-family: 'Roboto Mono', monospace;
    line-height: 1.2;
    text-align: justify;
    /* height: 18em; */
    height: fit-content;
    max-height: 18em;
    user-select: none;
    /* overflow: hidden; */
  }

</style>

<style is:global lang="scss">
  span {
    text-transform: uppercase;
    color: #272727;
    opacity: 0.35;
    transition:
      opacity #{var(--delay)} cubic-bezier(0.26, 0.06, 0, 1),
      color #{var(--delay)} cubic-bezier(0.26, 0.06, 0, 1);
    &.active-primary {
      color: #D4AF37;
      opacity: 1;
      // transition-delay: #{var(--delay)}s;
    }
    &.active-secondary {
      color: #B3B3B3;
      opacity: 1;
      // transition-delay: #{var(--delay)}s;
    }
  }
</style>

<script src='./script/index.ts'></script>
