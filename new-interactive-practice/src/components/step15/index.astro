<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">
<div class="bg">
  <div class="square">
    <div class="square-inner">
      <p class="words js-words">
      </p>
    </div>
  </div>
</div>

<style>
  .bg {
    background-color: #000;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: grid;
    place-items: center;
  }

  .square {
    width: 80vmin;
    aspect-ratio: 1;
    background: #00061C;
    color: #272727;
  }

  .square-inner {
    width: 100%;
    height: 100%;
    padding: 2vmin;
    display: grid;
    place-items: center;
  }

  .words {
    margin: 0;
    padding: 0;
    font-size: 4vmin;
    font-family: 'Roboto Mono', monospace;
    line-height: 1.2;
    text-align: justify;
    height: 18em;
    overflow: hidden;
  }

  .words,
  .words span {
    text-transform: uppercase;
  }
</style>

<script src='./script/index.ts'></script>
